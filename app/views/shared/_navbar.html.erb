<div class="pos-f-t navbar-lewagon">
  <div class="collapse" id="navbarToggleExternalContent">
    <div class="background-nav p-2">
      <div>
        <div class="d-flex">
          <p class="m-4 white-text"><%=link_to "Routes", root_path, class: 'a-tag-text'%></p>
          <p class="m-4 navbar-links white-text"><%=link_to "Events", root_path, class: 'a-tag-text'%></p>
          <ul class="navbar-nav profile-photo">
              <% if user_signed_in? %>
                <li class="nav-item dropdown">
                  <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                    <p class="m-4"><%=link_to "Profile", user_path(current_user) %></p>
                    <p class="m-4"><%= link_to "Log out", destroy_user_session_path, method: :delete%></p>
                  </div>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to "Login", new_user_session_path, class: "nav-link" %>
                </li>
              <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="d-flex">
    <div class="navbar-position">
      <nav class="navbar navbar-lines bg-blue">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      </nav>
    </div>
    <div class="logo-position">
      <%= link_to "#", class: "navbar-brand" do %>
        <%= image_tag "MaxLogo.png" %>
      <% end %>
    </div>
  </div>
</div>
