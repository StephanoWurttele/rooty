<div class="image-background-home">
  <div class="container center mt-5">
    <div class="trial-color">
      <h2 class="bungee-font-home center-style">A ROUTE LIKE NO OTHER</h2>
      <br>
      <br>
      <br>
      <div class="center-style">
        <button class="btn btn-gray large-print"><%= link_to "GENERATE YOUR ROUTE", map_path %></button>
      </div>
      <div class="container flex-direction-column justify-content-center">
        <div class="text-center">
          <%= form_for @new_node do |f|%>
          <div class="search-container h-100">
            <div class="d-flex justify-content-center h-100">
              <div class="searchbar">
                <%= f.text_field :address, class: "search_input", placeholder: "Search location" %>
                <button type="submit" class="search_icon"><i class="fas fa-search"></i></button>
              </div>
            </div>
          </div>
          <% end %>
       </div>
    </div>
  </div>
</div>

