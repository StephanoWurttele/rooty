
<div class="container flex-direction-column justify-content-center">
  <div class="text-center">
    <%= form_for Node.new do |f|%>
      <div class="search-container h-100">
        <div class="d-flex justify-content-center h-100">
          <div class="searchbar">
            <%= f.text_field :address, class: "search_input", placeholder: "Search location" %>
            <button type="submit" class="search_icon"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <% if @route %>
  <div class="bottom-choices center-route">
    <h3 class="m-1 mt-4"><i class="fas fa-running"></i> <%= @route.display_distance %>   ||   <i class="far fa-clock"></i> <%= @route.display_time %></h3>
    <%= link_to "Different route", edit_route_path(@route), class: "btn btn-dark m-1 text-light" %>
  </div>
  <% end %>
</div>



