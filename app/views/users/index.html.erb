<h2 class="bungee-font-m">Runners</h2>
<div class="friends-search mt-2">
    <%= form_tag users_path, method: :get, class: "search-box-home" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "search-input-home",
        placeholder: "Find a friend"
      %>
</div>
      <%= submit_tag "Search", class: "btn btn-dark center-button" %>
  <% end %>
</div>
<div id="user-list">
  <% @users.each do |f| %>
    <div>
      <%= link_to f do %>
        <div class="card-friend">
          <% if f.photo.attached? %>
            <%= cl_image_tag(f.photo.key, width: 600, height: 500, crop: :fill) %>
          <% else %>
            <%= image_tag("pp.png", width: 600, height: 500, crop: :fill)%>
          <% end %>
          <div class="card-friend-infos">
            <h2><%= f.name.capitalize %> <%= f.lastname.capitalize %> </h2>
            <p> @<%= f.username.capitalize %> </p>
            <p><%= f.email %> </p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
<div class="bottom-img-profile" style="background: linear-gradient(white, rgb(255,255,255), transparent), url(<%= image_path('city.png') %>);">
</div>
