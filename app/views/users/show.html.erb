<div>
  <div class="container">
    <div class="row h-100 justify-content-center align-items-center">
      <div class="">
        <div class="card-header">
          <div class="profile_pic">
          <% if @user.photo.attached? %>
            <%= cl_image_tag(@user.photo.key, crop: :fill) %>
          <% else %>
            <%= image_tag("pp.png", crop: :fill)%>
          <% end %>
          </div>
        </div>
        <div class="card-body-user-profile">
          <div class="d-flex justify-content-center flex-column">
            <div class="name_container">
              <div class="username"><h4> </h4> </div>
            </div>
            <div class="fullname"> <p> <%= @user.name %> <%= @user.lastname.capitalize %></p></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <br>

  <div class="d-flex justify-content-center">
    <div class="row">
      <% if current_user.friend?(@user) %>
        <%= link_to user_friends_path(@user), method: :post, remote: true do %>
          <button type="button" class="btn btn-danger fs-it-btn">
            <i class="fa fa-times" aria-hidden="true"></i>
            <span class="fs-it-btn-vertical-line"></span>
            Remove friend
          </button>
        <% end %>
      <% elsif @request_sent %>
        <%= link_to user_friends_path(@user), method: :post, remote: true do %>
          <button type="button" class="btn-add">
            <i class="fa fa-check" aria-hidden="true"></i>
            <span class="fs-it-btn-vertical-line"></span>
            Friend request sent!
          </button>
        <% end %>
      <% elsif @request_received %>
        <%= link_to friend_path(@user.id), method: :patch, remote: true do %>
          <button type="button" class="btn-add">
            <i class="fa fa-check" aria-hidden="true"></i>
            <span class="fs-it-btn-vertical-line"></span>
            Accept friend
          </button>
        <% end %>
      <% else %>
        <%= link_to user_friends_path(@user), method: :post, remote: true do %>
          <button type="button" class="btn-add">
            <i class="fa fa-plus" aria-hidden="true"></i>
            <span class="fs-it-btn-vertical-line"></span>
            Add a friend
          </button>
        <% end %>
      <% end %>
    </div>
  </div>
  </br>

  <div class="d-flex justify-content-center"><h2 class="bungee-font-small-friends">Previous events</h2></div>
  <div class="container">
  <div class="title-left m-3">
    <div class="routes_history_card">
      <% @events.each do |e| %>
        <div class="card-profile">
          <a href="/events/<%= e.id%>">
            <div class="card-event-friends">
            <% if e.photo.attached? %>
              <%= cl_image_tag(e.photo.key, width: 400, height: 300, crop: :fill) %>
            <% else %>
              <%= image_tag "test_6.jpg", width: 400, height: 300 %>
            <% end %>
              <div class="card-event-info d-flex flex-direction-column justify-content-center">
                <div>
                  <h2><strong> <%= e.title %> </strong></h2>
                  <p><strong>Distance: </strong><%= e.route.distance %> </p>
                  <p><strong> From: </strong> <%= e.route.nodes.first.address.upcase %> </p>
                </div>
              </div>
            </div>
          </a>
        </div>
      <% end %>
    </div>
  </div>
  </div>

  <div class="d-flex justify-content-center"><h2 class="bungee-font-small-friends">Friends</h2></div>
  <div class="row h-100 justify-content-center align-items-center">
    <a href="#">
        <div class="friends-photo">
            <img class="photo" src="https://s.hdnux.com/photos/51/23/24/10827008/3/920x920.jpg"/>
        </div>
    </a>
    <a href="#">
        <div class="friends-photo">
            <img class="photo" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS9WTpy07WmMlKbo95DvdZPDM9UkV4A0Ma19s8MKh5ln-YZEata"/>
        </div>
    </a>
    <a href="#">
        <div class="friends-photo">
            <img class="photo" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRmT0FivQvJM_ULsAABb4EvdTZ0DIIbC8N1Seec_p_Sa5SLYSKi"/>
        </div>
    </a>

    <div class="bottom-img-friends" style="background: linear-gradient(#FFFBE8, rgb(255,255,255), transparent), url(<%= image_path('bottom-background3.png') %>);">
  </div>
  </div>

</div>
