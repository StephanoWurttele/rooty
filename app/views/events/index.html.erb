<div class="container justify-content-center">
  <div>
    <h1><strong>Events</strong></h1>
    <h2> Popular in London </h2>
  </div>

  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <% @today_events.each do |event| %>
        <div class="carousel-item <%= 'active' if event == @today_events.first %>">
        <a href="/events/<%= event.id %>">
          <card class="d-block w-100">
            <div class="card-event-lg">
              <% if event.photo.attached? %>
                <%= cl_image_tag(event.photo.key, width: 400, height: 300, crop: :fill) %>
              <% else %>
                <%= image_tag "test_6.jpg", width: 400, height: 300 %>
              <% end %>
              <% if event == @today_events.first %>
              <div class="card-event-lg-info">
                <% end %>
                <div>
                  <h2><%= event.title %></h2>
                  <p><strong> <i class="fas fa-map-marker-alt"></i> <%= event.route.nodes.first.address %> </strong></p>
                  <p><strong> Distance: </strong><%= event.route.distance %> meters</p>
                </div>
                <% if event == @today_events.first %>
              </div>
                <% end %>
            </div>
          </a>
        </div>
      <% end %>
    </div>

    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <h2> Coming up this week..</h2>
  </br>

  <div class="container">
    <% @next_events.each do |event| %>
      <a href="/events/<%= event.id %>">
        <div class="card-event">
          <% if event.photo.attached? %>
            <%= cl_image_tag(event.photo.key, width: 400, height: 300, crop: :fill) %>
          <% else %>
            <%= image_tag "test_6.jpg", width: 400, height: 300 %>
          <% end %>          <div class="card-event-info">
            <div class="card-body">
              <h2><%= event.title %></h2>
              <p><strong>When:</strong> <%= event.starttime.strftime("%B %d, %Y at %I:%M%p") %> </p>
              <p><strong> Distance: </strong> <%= event.route.distance %> meters </p>
            </div>
          </div>
        </div>
      </a>
    <% end %>
  </div>
</div>
<div class="bottom-img-events" style="background: linear-gradient(#FFFBE8, rgb(255,255,255), transparent), url(<%= image_path('wireframe.png') %>);">
</div>
